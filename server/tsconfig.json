{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "built/js",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/types/*.ts",
    "node_modules",
    ".vscode"
  ]
}